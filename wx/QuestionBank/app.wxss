.tab {
    width: 100%;
    height: 70rpx;
    background: #0096ff;
    box-shadow: 0 5rpx 10rpx #ccc;
}

.tab_text {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.tab_indicator {
    width: 100%;
    height: 8rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.tab_indicator_show {
    /* background: #00b919; */
    background: #fff;
}

.subject_picker {
    width: fit-content;
    margin: 30rpx auto;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

button {
    width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
}

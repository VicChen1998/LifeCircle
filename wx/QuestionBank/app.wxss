.container {
    padding-top: 135rpx; 
}

.navigationBar {
    width: 100%;
    height: 125rpx;
    padding-bottom: 15rpx;
    background: #0096ff;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: fixed;
    top: 0;
    z-index: 998;
    
}

.tab {
    width: 100%;
    height: 70rpx;
    background: #0096ff;
    box-shadow: 0 5rpx 5rpx #ccc;
}

.tab_text {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.tab_indicator {
    width: 100%;
    height: 8rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.tab_indicator_show {
    /* background: #00b919; */
    background: #fff;
}

.subject_picker {
    width: fit-content;
    margin: 30rpx auto;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

button {
    width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
}

.navigationBack {
    width: 50rpx;
    height: 50rpx;
    position: fixed;
    left: 20rpx;
}

.comment {
    margin: 0 0 10rpx;
    font-size: 25rpx;
    color: #666;
}

.hint {
    margin: 30rpx auto;
    text-align: center;
    font-size: 32rpx;
    color: #ccc;
}
.hint{
    margin: 0 auto;
    padding: 15rpx 0 10rpx;
    background: #f6f6f6;
    border-bottom: 1rpx solid #eee;
}

.type {
    margin-bottom: 5rpx;
    box-shadow: 0 5rpx 10rpx #eee;
}

.topbar {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #f6f6f6;
    box-shadow: 0 -3rpx 10rpx #eee inset;
}

.item {
    padding: 20rpx 30rpx 10rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    position: relative;
}

.question {
    margin-right: 30rpx;
    margin-bottom: 10rpx;
    font-size: 30rpx;
}

.more {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    transform: rotate(90deg);
}

.choice_options {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.option {
    margin-right: 20rpx;
    font-size: 25rpx;
    color: #666;
}

.choice_answer {
    margin-left: 10rpx;
    color: #0096ff;
}

.fill_answer {
    margin-right: 20rpx;
}

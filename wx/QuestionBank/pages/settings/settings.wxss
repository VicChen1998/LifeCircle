.topbar {
    height: 350rpx;
    background: #0096ff;
    box-shadow: 0 5rpx 10rpx #ccc;
}

.avatar {
    width: 180rpx;
    height: 180rpx;
    position: relative;
    margin: 0 40rpx;
    border-radius: 50%;
    overflow: hidden;
    float: left;
}

.topbar_info {
    height: 130rpx;
    margin: 0 50rpx 0 210rpx;
    padding-top: 50rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.motto {
    height: 110rpx;
    margin: 50rpx 50rpx 10rpx;
}

.menu {
    margin: 20rpx 50rpx;
}

.menuitem {
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.menu_title {
    width: 25%;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 5%;
    text-align: center;
    float: left;
}

.menu_picker {
    width: 60%;
    height: 100rpx;
    margin-right: 8%;
    line-height: 100rpx;
    text-align: center;
    color: #666;
    float: right;
}

.more {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx;
    float: right;
}
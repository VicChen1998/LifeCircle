.topbar {
    height: 380rpx;
    background: linear-gradient(#0096ff, #0086ff);
    box-shadow: 0 5rpx 5rpx #ccc;
}

.avatar {
    width: 180rpx;
    height: 180rpx;
    position: relative;
    margin: 0 40rpx;
    border-radius: 50%;
    overflow: hidden;
    float: left;
    z-index: 999;
}

.topbar_info {
    height: 130rpx;
    margin: 0 50rpx 0 210rpx;
    padding-top: 50rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.motto {
    height: 110rpx;
    margin: 50rpx 50rpx 10rpx;
}

.menu {
    margin: 20rpx 40rpx;
}

.menuitem {
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f4f4f4;
    display: flex;
    justify-content: space-around;
}

.menu_title {
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.menu_value {
    width: 420rpx;
    height: 100rpx;
    margin: 0 auto;
    line-height: 100rpx;
    text-align: center;
    color: #666;
}

.more {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0;
    float: right;
}

textarea {
    width: 95%;
    margin: 0 auto;
    padding-left: 20rpx;
    border-left: 1rpx solid #ddd;
}

.option_item {
    width: 100%;
    height: 50rpx;
    margin-top: 50rpx;
    display: flex;
    align-items: flex-end;
}

.option_title {
    width: 50rpx;
    margin-left: 20rpx;
}

.option_content {
    width: 100%;
    border-bottom: 1rpx solid #f0f0f0;
}

.choice_answer, .judge_answer {
    width: 80%;
    height: 50rpx;
    margin: 50rpx 20rpx;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.fill_answer {
    width: 300rpx;
    margin: 10rpx 50rpx;
    text-align: center;    
    border-bottom: 1rpx solid #f0f0f0;
    float: right;
}

.icon {
    width: 80rpx;
    height: 80rpx;
    position: relative;
    left: 0;
    top: 0;
}

button {
    width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    background: #f4f4f4;
}

button::after {
    border: none;
}
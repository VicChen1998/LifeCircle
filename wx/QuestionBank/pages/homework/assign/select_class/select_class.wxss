.college_item {
    padding: 30rpx;
    font-size: 38rpx;
    border-bottom: 1rpx solid #eee;
}

.college_name{
    width: 100%;
}

.major_item {
    display: flex;
    font-size: 35rpx;
    padding-top: 20rpx;
}

.major_name {
    width: 30%;
    height: 55rpx;
    line-height: 55rpx;
}

.class {
    width: 70%;
    margin-left: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.class_item {
    height: 55rpx;
    margin-right: 30rpx;
    line-height: 55rpx;
    float: right;
}

.confirm {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    position: fixed;
    bottom: 0;
    border-radius: 0;
    border: none;
    box-shadow: 0 -5rpx 5rpx #ccc;
}

.confirm::after {
    border-radius: 0;
    border: none;
}

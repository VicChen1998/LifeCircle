.type {
    margin-bottom: 35rpx;
}

.type_title {
    font-size: 34rpx;
    font-weight: bold;
}

.item {
    margin: 5rpx 0;
    font-size: 30rpx;
}

.question {
    margin-bottom: 10rpx;
}

.choice_answer {
    margin-left: 20rpx;
    color: #0096ff;
}

.choice_options {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.option {
    margin-right: 20rpx;
    font-size: 25rpx;
    color: #666;
}

.fill_answer {
    margin-right: 25rpx;
    font-size: 25rpx;
    color: #666;
}

/* 底部栏 */

.footbar {
    width: 100%;
    font-size: 32rpx;
    text-align: center;
    position: fixed;
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.typebar {
    height: 100rpx;
    bottom: 80rpx;
    border-top: 1px solid #eee;
}

.typebar_item {
    height: 100rpx;
    display: flex;
}

.type_name {
    height: 100rpx;
    line-height: 100rpx;
}

picker-view {
    width: 50rpx;
    height: 50px;
    padding: 0 10rpx;
    position: relative;
}

.picker {
    height: 50rpx;
    line-height: 50rpx;
}

.generate {
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 25rpx;
    border-left: 1px solid #eee;
}

.buttonbar {
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1px solid #eee;
    bottom: 0;
}

.foot_button {
    width: 100%;
    padding: 0 15rpx;
    border-right: 1px solid #eee;
}

.homework_name {
    width: 100%;
    height: 80rpx;
}
